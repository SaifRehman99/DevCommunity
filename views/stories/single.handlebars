<div class="row">
  <div class="col s12 m9">
    <div class="card">
      <h3>{{story.title}}</h3>
      <small>{{{editIcon story.user.id user.id story.id false}}}</small>
      <span class="card-title">{{formateDate story.date "MMMM Do YYYY"}}</span>
      <div class="card-content">
        <h4>{{stripTags  story.body}}</h4>
      </div>

      {{#if story.allowComments}}
      <div>
        {{#if user}}
        <form action="/stories/comment/{{story.id}}" method="POST">
          <div class="input-field col s12">
            <textarea id="textarea1" class="materialize-textarea" name="comment"></textarea>
            <label for="textarea1">Comment</label>
          </div>
          <button type="submit" class="btn">Add Comment</button>
        </form>
        {{else}}
        <a href="/auth/google">Login</a> to add comments
        {{/if}}
      </div>



      {{#each story.comments}}
      <div class="card">
        <div class="card-content">

          <div class="chip">
            <img src="{{commentUser.image}}" alt="">
            <a href="/stories/user/{{commentUser.id}}">
              {{commentUser.firstName}} {{commentUser.lastName}}

            </a>


          </div>
          <span class="flow-text">{{commentBody}}</span>
          <br>
          <small> Posted : {{formateDate commentDate "YYYY do MMMM"}}</small>


        </div>
      </div>
      {{/each}}

      {{/if}}
    </div>
  </div>
  <div class="col s12 m3">
    <div class="card center">
      <span class="card-title">{{story.user.firstName}} {{story.user.lastName}}</span>
      <img src="{{story.user.image}}" class="responsive-img">


      <div class="card-action">
        <a class="btn grey" href="/stories/user/{{story.user.id}}">More from {{story.user.firstName}}</a>
      </div>
    </div>
  </div>
</div>